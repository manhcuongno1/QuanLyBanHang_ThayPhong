@model SV20T1020322.DomainModels.Supplier
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/Save" method="post" enctype="multipart/form-data">
            <input type="hidden" name="@nameof(Model.SupplierID)" value="@Model.SupplierID" />

            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" class="form-control" name="@nameof(Model.SupplierName)" autofocus value="@Model.SupplierName">
                @Html.ValidationMessage("SupplierName",new { @style="color:#f00" })
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" name="ContactName" value="@Model.ContactName">
                @Html.ValidationMessage("ContactName",new { @style="color:#f00" })
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" name="Phone" value="@Model.Phone">
            </div>

            <div class="form-group">
                <label>Email</label>
                <input type="email" class="form-control" name="Email" value="@Model.Email">
                @Html.ValidationMessage("Email",new { @style="color:#f00" })
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" name="Address" value="@Model.Address">
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                <select class="form-control" name="Province">
                    <option value="">-- Chọn tỉnh/thành --</option>
                    @foreach (var item in SV20T1020322.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select>
                @Html.ValidationMessage("Province",new { @style="color:#f00" })
            </div>   
            
            <div class="form-group">
                <input type="hidden" class="form-control" name="NgayThanhLap" value="@Model.NgayThanhLap" />
                <input type="text" class="form-control date-picker" name="NgayThanhLap" value="@Model.NgayThanhLap.ToString("dd/MM/yyyy",new System.Globalization.CultureInfo("en-GB"))" />

            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
