@{
    ViewBag.Title = "Đổi mật khẩu";
}

<div class="box box-primary">
    <div class="box-body">
       
        <form action="~/Account/ChangePassword" method="post">
            <div style="color:red">
                @Html.ValidationMessage("Error","")
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Mật khẩu cũ" name="oldPassword">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Mật khẩu mới" name="newPassword">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Xác nhận lại mật khẩu" name="comfirmNewPassword">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Đổi mật khẩu
                </button>

                <a href="~/Home" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>

    </div>
    <!-- /.login-box-body -->
</div>