@model SV20T1020322.Web.Models.Person
@{

}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Test/Save" method="post">
            
            <div class="form-group">
                <label>Name:</label>
                <input type="text" class="form-control" name="Name" value="@Model.Name">
            </div>

            <div class="form-group">
                <label>Birthday:</label>
                <input type="hidden" name="Birthday" value="@Model.Birthday">
                <input type="text" class="form-control date-picker" name="BirthdayInput" value="@Model.Birthday.ToString("dd/MM/yyyy",new System.Globalization.CultureInfo("en-GB"))">
            </div>

            <div class="form-group">
                <label>Salary:</label>
                <input type="text" class="form-control" name="Salary" value="@Model.Salary">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Lưu dữ liệu
                </button>
                <a href="~/Test" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
